extends modules/layout/layout.pug
include modules/_page-list/_page-list
block head
  link(href="https://fonts.googleapis.com/css?family=Poppins:400,500,700" rel="stylesheet")
  link(href="css/Searchs_122.css" rel="stylesheet")

block content
  .s122
    form
      .inner-form
        header
          .travel-type-wrap
            .item.active
              span Hotels
            .item
              span Car
            .item
              span Flight
        .main-form#main-form
          .row
            .input-wrap
              .icon-wrap
                svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24')
                  path(d='M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z')
              .input-field
                label GOING TO
                input(type='text', placeholder='Destination, hotel name')
          .row.second
            .input-wrap
              .icon-wrap
                svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24')
                  path(d='M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z')
              .input-field
                label CHECK-IN
                input.datepicker(type='text', placeholder='mm/dd/yy')
            .input-wrap
              .icon-wrap
                svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24')
                  path(d='M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z')
              .input-field
                label CHECK-OUT
                input.datepicker(type='text', placeholder='mm/dd/yy')
          .row.third
            .input-wrap
              .icon-wrap
                svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24')
                  path(d='M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z')
              .input-field
                label TRAVELERS
                .input-select
                  select(data-trigger='', name='choices-single-defaul')
                    option(placeholder='') 1 adult
                    option 2 adults
                    option 3 adults
                    option 4 adults
          .row.third
            .input-checkbox-group
              .input-checkbox
                input#yes(type='checkbox', name='customer', value='yes', checked)
                label(for='yes') ADD A FLIGHT
              .input-checkbox
                input#no(type='checkbox', name='customer', value='no')
                label(for='no') ADD A CAR
          .row.last
            button.btn-search(type='button') Search
  script(src='js/extention/choices.js')
  script.
    const choices = new Choices('[data-trigger]', {
      searchEnabled: false,
      itemSelectText: '',
    });
  script(src='js/extention/flatpickr.js')
  script.
    flatpickr(".datepicker", {
      dateFormat: "m/d/y"
    });

    var btnTypes = document.querySelectorAll('.travel-type-wrap .item')
    for(let i = 0; i < btnTypes.length; i++) {
      btnTypes[i].addEventListener('click', function(){
        for(let i = 0; i < btnTypes.length; i++) {
          btnTypes[i].classList.remove('active')
        }
        btnTypes[i].classList.add('active')
      })
    }
  