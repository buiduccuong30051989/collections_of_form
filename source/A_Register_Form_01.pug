extends modules/layout/layout.pug
include modules/_page-list/_page-list
block head
  link(href="css/A_Register_Form_01.css" rel="stylesheet")
  script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js')

block content
  .arf01
    .inner
      header
      form
        fieldset
          legend Register Form
          .row
            .input-field.col.s12
              input#name.validate(type='text')
              label(for='name') NAME
          .row
            .input-field.col.s6
              input#birthdate.validate(type='text')
              label(for='birthdate') BIRTHDATE
            .input-field.col.s6
              select
                option(value='', disabled='', selected='') Choose your option
                option(value='1') Option 1
                option(value='2') Option 2
                option(value='3') Option 3
              label GENDER
          .row
            .input-field.col.s12
              input#class.validate(type='text')
              label(for='class') CLASS
          .row
            .input-field.col.s6
              input#code.validate(type='text')
              label(for='code') REGISTRATION CODE
          .row
            .col.s12
              button(type='button').btn.btn-flat.waves-effect.waves-light.btn-small.teal.white-text Button
  script.
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems);
    });
    //- M.updateTextFields();